<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="RED"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/view_text_margin"
            android:layout_marginTop="@dimen/view_text_margin"/>

    <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/view_text_margin"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="GREEN"
            android:id="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/seekBar"
            android:layout_marginTop="@dimen/view_text_margin"
            android:layout_marginBottom="@dimen/view_text_margin"/>

    <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar2"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/view_text_margin"
            android:indeterminate="false"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="BLUE"
            android:id="@+id/textView3"
            android:layout_below="@+id/seekBar2"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/view_text_margin"
            android:layout_marginBottom="@dimen/view_text_margin"/>

    <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar3"
            android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/view_text_margin"
            />

    <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@android:color/darker_gray"
            android:id="@+id/line1"
            android:layout_centerVertical="true"
            android:layout_below="@+id/seekBar3"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/view_text_margin"
            android:layout_marginBottom="@dimen/view_text_margin"/>

    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox"
            android:text="Music Control Enable"
            android:textSize="10pt"
            android:checked="false"
            android:layout_below="@+id/line1"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/view_text_margin"
            android:layout_marginBottom="@dimen/view_text_margin"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@android:color/darker_gray"
            android:id="@+id/line2"
            android:layout_centerVertical="true"
            android:layout_below="@+id/checkBox"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/view_text_margin"
            android:layout_marginBottom="@dimen/view_text_margin"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="LED Illumination:"
            android:id="@+id/textView4"
            android:layout_below="@+id/line2"
            android:layout_alignLeft="@+id/line2"
            android:layout_marginTop="@dimen/view_text_margin"
            android:layout_marginRight="@dimen/view_text_margin"
            android:layout_marginBottom="@dimen/view_text_margin"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="100lux"
            android:id="@+id/textView5"
            android:layout_below="@+id/line2"
            android:layout_toRightOf="@+id/textView4"
            android:layout_marginTop="@dimen/view_text_margin"
            android:layout_marginLeft="@dimen/view_text_margin"
            android:layout_marginBottom="@dimen/view_text_margin"/>


</RelativeLayout>