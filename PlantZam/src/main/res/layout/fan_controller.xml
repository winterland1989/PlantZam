<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Fan Speed"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/view_text_margin"
            android:layout_marginBottom="@dimen/view_text_margin"/>

    <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/view_text_margin"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@android:color/darker_gray"
            android:id="@+id/line1"
            android:layout_centerVertical="true"
            android:layout_below="@+id/seekBar"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/view_text_margin"
            android:layout_marginBottom="@dimen/view_text_margin"/>

    <ToggleButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toggleButton"
            android:layout_below="@+id/line1"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/view_text_margin"
            android:layout_marginBottom="@dimen/view_text_margin"
            android:checked="false"
            android:textOn="Stop Watering"
            android:textOff="Water Now"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@android:color/darker_gray"
            android:id="@+id/line2"
            android:layout_centerVertical="true"
            android:layout_below="@+id/toggleButton"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/view_text_margin"
            android:layout_marginBottom="@dimen/view_text_margin"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Temperature:"
            android:id="@+id/textView2"
            android:layout_below="@+id/line2"
            android:layout_alignLeft="@+id/line2"
            android:layout_marginTop="@dimen/view_text_margin"
            android:layout_marginBottom="@dimen/view_text_margin"
            android:layout_marginRight="@dimen/view_text_margin"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0 centigrade"
            android:id="@+id/textView3"
            android:layout_below="@+id/line2"
            android:layout_toRightOf="@+id/textView2"
            android:layout_marginTop="@dimen/view_text_margin"
            android:layout_marginLeft="@dimen/view_text_margin"
            android:layout_marginBottom="@dimen/view_text_margin"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Humidity:"
            android:id="@+id/textView4"
            android:layout_below="@+id/textView2"
            android:layout_alignLeft="@+id/textView2"
            android:layout_marginTop="@dimen/view_text_margin"
            android:layout_marginBottom="@dimen/view_text_margin"
            android:layout_marginRight="@dimen/view_text_margin"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="50%"
            android:id="@+id/textView5"
            android:layout_below="@+id/textView2"
            android:layout_toRightOf="@+id/textView4"
            android:layout_marginTop="@dimen/view_text_margin"
            android:layout_marginLeft="@dimen/view_text_margin"
            android:layout_marginBottom="@dimen/view_text_margin"/>

</RelativeLayout>